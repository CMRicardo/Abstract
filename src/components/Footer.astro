      title={"Resources"}
      links={["Blog", "Help Center", "Release Notes", "Status"]}
    />
    <FooterList
      title={"Community"}
      links={["Twitter", "LinkedIn", "Facebook", "Dribble", "Podcast"]}
    />
    <FooterList
      title={"Company"}
      links={["About Us", "Careers", "Legal"]}
